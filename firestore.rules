
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read access for collections needed for browsing
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Or more specific admin check
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /restaurants/{restaurantId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /banners/{bannerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Lock down user and order data to authenticated users only (admins)
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
  }
}
