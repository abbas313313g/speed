
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are insecure and allow anyone to read and write to your database.
    // This is a temporary measure to get the app running without authentication.
    // For a production app, you should implement proper security rules.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
